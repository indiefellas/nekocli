{
  "name": "nekocli",
  "description": "nekocli is a console app that makes it simple to make websites with Nekoweb.",
  "version": "0.1.0-b8",
  "module": "./src/neko.ts",
  "type": "module",
  "main": "./src/neko.ts",
  "preferGlobal": true,
  "os": ["linux", "win32"],
  "cpu": ["x64", "arm64"],
  "bin": {
    "neko": "./bin/neko"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./src"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@indiefellas/nekoweb-api": "latest",
    "@types/bun": "latest",
    "@types/yauzl": "^2.10.3",
    "commander": "^13.1.0",
    "is-binary-path": "^3.0.0",
    "launch-editor": "^2.10.0",
    "watcher": "^2.3.1",
    "yauzl": "^3.2.0"
  },
  "keywords": [
    "nekoweb",
    "api"
  ],
  "engines": {
    "bun": ">1.2.6"
  },
  "scripts": {
    "compile:linux-x64": "bun build ./src/neko.ts --compile --production --bytecode --target=bun-linux-x64 --outfile ./bin/neko",
    "compile:linux-arm64": "bun build ./src/neko.ts --compile --production --bytecode --target=bun-linux-arm64 --outfile ./bin/neko-arm64",
    "compile:windows": "bun build ./src/neko.ts --compile --production --bytecode --target=bun-windows-x64 --outfile ./bin/neko",
    "prepack": "bun compile:linux-x64 && bun compile:linux-arm64 && bun compile:windows",
    "postinstall": "node ./src/install.js"
  }
}
